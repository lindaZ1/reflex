<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dzhang4.dzhang4_gamebuzzer.two_playerActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="196"
        android:columnCount="101"
        android:id="@+id/TwoPlayer"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:text="@string/Player12"
            android:id="@+id/Player1"
            android:layout_row="44"
            android:layout_column="38"
            android:onClick="P1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:text="@string/Player22"
            android:id="@+id/Player2"
            android:layout_row="90"
            android:layout_column="38"
            android:onClick="P2"/>

    </GridLayout>

</RelativeLayout>
